                    <button display="always" name="quick_sync" type="object" string="Upload To Cloud"/>
                </header>
                <field name="synced_display" decoration-success="synced == 1" decoration-info="synced == 0" widget="badge"/>
                <field name="synced" column_invisible="True" /> -->
                <field name="datetime" />
                <field name="ref_no" />
                <field name="vehicle_id" domain="[('state_id.visibility', '=', '1')]" widget="many2one_avatar"/>
                <field name="driver_id" domain="[('plan_to_change_car', '!=', None)]" widget="many2one_avatar"/>
                <field name="trip_id"/>
                <field name="distance" />
                <field name="price" />
                <field name="bucket" />
                <field name="bucket_amount" />
                <field name="loading_weight" />
