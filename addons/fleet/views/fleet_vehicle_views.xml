    <menuitem name="Data Entry" parent="menu_root" id="fleet_vehicles" sequence="2" groups="fleet_group_user"/>
    <menuitem action="fleet_vehicle_action" parent="fleet_models_configuration" name="Vehicles"
        id="fleet_vehicle_menu" groups="fleet_group_manager" sequence="1"/>

   <record id='fleet_vehicle_trip_view_form' model='ir.ui.view'>
        <field name="name">fleet.vehicle.trip.form</field>
        <field name="model">fleet.vehicle.trip</field>
        <field name="arch" type="xml">
            <form string="trip Logs">
                <sheet>
                    <group col="2">
                        <group string="Information">
                            <field name="datetime" />
                            <field name="ref_no" />
                            <field name="vehicle_id" domain="[('state_id.visibility', '=', '1')]" widget="many2one_avatar" options="{'no_create': True, 'no_create_edit':True}"/>
                            <field name="driver_id" domain="[('plan_to_change_car', '!=', None)]" widget="many2one_avatar" options="{'no_create': True, 'no_create_edit':True}"/>
                        </group>
                        <group string="Trip Details">
                            <field name="trip_id" options="{'no_create': True, 'no_create_edit':True}"/>
                            <field name="distance" invisible="not trip_id"/>
                            <field name="price" invisible="not trip_id" />
                            <field name="bucket" invisible="not trip_id" />
                            <field name="bucket_amount" invisible="not trip_id" />
                            <field name="loading_weight" invisible="not trip_id" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

